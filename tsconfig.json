{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "target": "es6",
        "esModuleInterop": true,
        "sourceMap": false,
        "noEmitOnError": true,
        "typeRoots": ["node_modules/@types"],
        "moduleResolution": "node",
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".vscode", "dist", ".husky", ".git", ".github"]
}
