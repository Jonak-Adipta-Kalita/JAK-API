{
    "version": 2,
    "public": true,
    "builds": [
        {
            "src": "src/api.ts",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/src/api.ts"
        },
        {
            "src": "/(.+)",
            "dest": "public/$1"
        }
    ]
}
